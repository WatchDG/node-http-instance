{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "es6"],
    "target": "es2019",
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}